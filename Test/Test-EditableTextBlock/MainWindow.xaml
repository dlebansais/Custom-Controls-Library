<Window x:Class="TestEditableTextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="CustomControlsLibrary"
        Title="Test-EditableTextBlock"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <DockPanel>
        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,5,0">Test:</TextBlock>
        <Border>
            <ctrl:EditableTextBlock x:Name="ctrl" Text="{Binding EditableText}" VerticalAlignment="Center" Width="100"/>
        </Border>
    </DockPanel>
</Window>
